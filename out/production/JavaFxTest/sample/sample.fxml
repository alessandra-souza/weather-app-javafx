        <children>
            <ComboBox fx:id="citiesCombo" prefWidth="400.0" prefHeight="30" promptText="Please select a city below:">
                <VBox.margin>
                    <Insets top="0" />
                </VBox.margin>
            </ComboBox>
            <Label fx:id="selectedCity" textFill="#fefefe">
                <font>
                    <Font name="Helvetica Bold" size="28.0" />
                </font>
                <VBox.margin>
                    <Insets top="8.0" />
                </VBox.margin>
            </Label>
            <ImageView fx:id="icon" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
<!--                <image>-->
<!--                    <Image url="http://www.openweathermap.org/img/w/02d.png" />-->
<!--                </image>-->
            </ImageView>
            <Label fx:id="cityTempDesc" textFill="#fefefe">
                <font>
                    <Font name="Helvetica Bold" size="16.0" />
                </font>
                <VBox.margin>
                    <Insets top="8.0" />
                </VBox.margin>
            </Label>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                <children>
                    <Label fx:id="cityTemp" alignment="CENTER" contentDisplay="RIGHT" textAlignment="CENTER" textFill="#fefefe">
                        <font>
                            <Font name="Helvetica Bold" size="89.0" />
                        </font>
                    </Label>
                    <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
                        <children>
                            <Label alignment="CENTER" fx:id="cityMinTemp" textFill="#fefefe">
                                <font>
                                   <Font name="Roboto Condensed Regular" size="13.0" />
                                </font>
                            </Label>
                            <Label alignment="CENTER" contentDisplay="CENTER" fx:id="cityMaxTemp" textFill="#fefefe">
                                <font>
                                   <Font name="Roboto Condensed Regular" size="13.0" />
                                </font>
                            </Label>
                        </children>
                    </HBox>
                </children>
            </VBox>
            <Label fx:id="lblSkiiable" textFill="#fefefe">
                <font>
                    <Font name="Roboto Condensed Regular" size="14.0" />
                </font>
            </Label>
            <Label fx:id="lblSailable" layoutX="160.0" layoutY="409.0" textFill="#fefefe">
                <font>
                    <Font name="Roboto Condensed Regular" size="14.0" />
                </font>
            </Label>
            <Label fx:id="lblBikable" layoutX="160.0" layoutY="432.0" textFill="#fefefe">
                <font>
                    <Font name="Roboto Condensed Regular" size="14.0" />
                </font>
            </Label>
